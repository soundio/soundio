{
    "name": "soundstage",
    "title": "Soundstage",
    "version": "0.8.0",
    "homepage": "http://sound.io",
    "description": "An audio node graph, sequencing engine, MIDI controller and JSON schema for the Web Audio API.",
    "repository": {
        "type": "git",
        "url": "https://github.com/soundio/soundstage.git"
    },
    "author": {
        "name": "Stephen Band",
        "url": "http://stephen.band",
        "twitter": "stephband"
    },
    "bugs": {
        "url": "https://github.com/soundio/soundstage/issues"
    },
    "licenses": [],
    "keywords": [
        "javascript",
        "browser",
        "web",
        "audio",
        "sound",
        "soundio",
        "soundstage",
        "sequence"
    ],
    "devDependencies": {
        "eslint": "^5.16.0",
        "rollup": "^1.8.0",
        "puppeteer": "^1.15.0",
        "node-sass": "^4.10.0"
    },
    "module": "module.js",
    "main": "index.js",
    "scripts": {
        "lint": "eslint components/*.js && eslint modules/*.js && eslint nodes/*.js",
        "build": "npm run build-cjs && npm run build-esm",
        "build-cjs": "rollup module.js --o index.js --f cjs",
        "build-esm": "rollup module.js --o soundstage.js --f esm",
        "build-docs": "node ../fn/render-html.js http://localhost/soundstage/template.html ./index.html 10",
        "sass": "node-sass --output-style compact --indent-type tab --indent-width 1 -o css css/respond.scss"
    }
}
